<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#20000000"
    android:padding="6dp" >

    <TextView
        android:id="@+id/value_event_num"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="999"
      	android:textColor="#FFFFFF"
      	android:layout_alignParentLeft="true"
      	android:layout_centerVertical="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/value_event_time"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="10:53 AM"
      	android:textColor="#FFFFFF"
      	android:layout_toRightOf="@+id/value_event_num"
      	      	android:layout_centerVertical="true"
        android:textSize="20sp" />
    
     <TextView
        android:id="@+id/value_event_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="11/18/2014"
      	android:textColor="#FFFFFF"
      	android:layout_toRightOf="@+id/value_event_time"
      	      	android:layout_centerVertical="true"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/value_event_type"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="User Photo"
      	android:textColor="#FFFFFF"
      	      	      	android:layout_centerVertical="true"
      	android:layout_toRightOf="@+id/value_event_date"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/value_event_location"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="NE"
              	android:layout_centerVertical="true"
      	android:textColor="#FFFFFF"
      	android:layout_toRightOf="@+id/value_event_type"
        android:textSize="20sp" />
	<Button
        	        android:id="@+id/btn_open_pic"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_alignParentRight="true"
        	              	android:layout_centerVertical="true"
        	        android:text="Picture" />
</RelativeLayout> 