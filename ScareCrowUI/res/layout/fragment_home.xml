<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/ApplicationBackground" >
    
    <LinearLayout
        android:id="@+id/tempHumidStatusView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        
        	<LinearLayout
	         	android:id="@+id/tempView"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:padding="5dp"
		        android:layout_height="fill_parent"
		        android:background="@drawable/fourpanel" 
		        android:orientation="vertical"
		        android:scaleType="fitXY"
				>
        	    
        	     <TextView
		            android:id="@+id/tempLabel"
		            android:layout_width="580dp"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:text="Temperature"
		            android:textColor="#FF0000"
		            android:textSize="40sp" />

        	     	    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
				>
        	     <TextView
		            android:id="@+id/mainTempValue"
		            android:layout_width="470dp"
		            android:layout_height="200dp"
		            android:gravity="right"
		            android:includeFontPadding="false"
		            android:text="200.0"
		            android:textColor="#FF0000"
		            android:textSize="175sp" />
        	    
        	     <TextView
		            android:id="@+id/mainTempUnit"
		            android:layout_width="70dp"
		            android:layout_height="200dp"
		            android:gravity="bottom"
		            android:text="°C"
		            android:textColor="#FF0000"
		            android:textSize="60sp" />
        	 </LinearLayout>
        	</LinearLayout>
       
        	<Space 
        	     android:layout_width="10dp"
	        android:layout_height="fill_parent"/>
        	
        	<LinearLayout
         	android:id="@+id/HumidView"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:padding="5dp"
	        android:scaleType="fitXY"
	        android:orientation="vertical"
	        android:background="@drawable/fourpanel" >					
            	

        	<TextView
	            android:id="@+id/humidLabel"
	            android:layout_width="580dp"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="Humidity"
	            android:textColor="#0080FF"
	            android:textSize="40sp" />
<LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
				>
	        <TextView
	            android:id="@+id/mainHumidValue"
	            android:layout_width="510dp"
	            android:layout_height="200dp"
	            android:gravity="right"
	            android:includeFontPadding="false"
	            android:text="100"
	            android:textColor="#0080FF"
	            android:textSize="175sp" />

	        <TextView
	            android:id="@+id/mainHumidUnit"
	            android:layout_width="70dp"
	            android:layout_height="200dp"
	            android:gravity="bottom"
	            android:text="%"
	            android:textColor="#0080FF"
	            android:textSize="60sp" />
</LinearLayout>
	       
        </LinearLayout>   
</LinearLayout>
